  "scripts": {
    "start:pokedex:dev": "nx run backend:serve --watch --configuration=development",
    "start:pokedex:debug": "nx run backend:serve --watch --configuration=development --inspect",
	"start:frontend": "nx serve frontend",
    "build:frontend": "nx build frontend",
    "typeorm": "cd backend && npx typeorm-ts-node-commonjs",
